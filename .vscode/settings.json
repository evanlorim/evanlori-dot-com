{
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "editor.detectIndentation": false,
    "files.associations": {
        "*.html": "liquid",
        "*.md": "liquid"
    },
    "[markdown]": {
        "editor.indentSize": 2,
        "editor.tabSize": 2
    },
    "[yaml]": {
        "editor.indentSize": 2,
        "editor.tabSize": 2
    },
    "[liquid]": {
        "editor.defaultFormatter": "sissel.shopify-liquid",
        "editor.formatOnSave": true
    },
    "liquid.completion.tags": true,
    "liquid.completion.objects": true,
    "liquid.completion.filters": true,
    "liquid.completion.operators": true,
    "liquid.completion.schema": true,
    "liquid.validate.schema": true,
    "liquid.hover.tags": true,
    "liquid.hover.filters": true,
    "liquid.hover.schema": true,
    "liquid.config.method": "liquidrc",
    "files.exclude": {
        ".vscode/": true,
        ".jekyll-cache/": true,
        "node_modules/": true,
        "Gemfile.lock": true,
        "yarn.lock": true,
        "_site": true,
        "LICENSE": true,
        ".liquidrc": true,
        ".prettierrc": true,
        ".prettierignore": true,
        ".gitignore": true,
        "config.rb": true,
        "Rakefile": true,
        "Gemfile": true,
        "package.json": true
    }
}
